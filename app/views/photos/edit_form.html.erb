<h1>Edit form</h1>

<form action="/update_photo/<%= @my_photo.id %>">
  <label for="cap">
    Caption
  </label>
<input id="cap" type="text" name="the_caption" value="<%= @my_photo.caption %>">
<label for="src">
  Image URL
</label>
<input id="src" type="text" name="the_source" value="<%= @my_photo.source %>">
<button type="submit">Update Photo</button>

</form>
